    <com.parrot.freeflight.update.view.CircularSlider android:id="@id/slider_update_progress" android:layout_width="@dimen/update_circular_progress_size" android:layout_height="@dimen/update_circular_progress_size" android:layout_centerInParent="true" app:innerValueTextColor="@color/light_gray" app:filledColor="@color/light_gray" app:innerTextCaps="true" />
