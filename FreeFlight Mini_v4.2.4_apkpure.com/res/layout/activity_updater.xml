    <CheckBox android:id="@id/checkbox_progress_2" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/piloting_buttons_margin" android:layout_above="@id/checkbox_progress_3" />
