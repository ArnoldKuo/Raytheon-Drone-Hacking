    <CheckBox android:id="@id/checkbox_progress_3" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/piloting_buttons_margin" android:layout_above="@id/text_version_info" />
    <TextView android:id="@id/text_drone_reset" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/drone_reset" android:layout_toRightOf="@id/checkbox_progress_3" android:layout_alignBaseline="@id/checkbox_progress_3" />
    <TextView android:layout_gravity="left" android:id="@id/text_version_info" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/piloting_buttons_margin" android:layout_alignParentBottom="true" />
</RelativeLayout>