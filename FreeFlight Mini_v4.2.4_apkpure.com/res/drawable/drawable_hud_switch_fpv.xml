<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <bitmap android:src="@drawable/settings_fpv_foreground" android:tint="@color/grey" />
    </item>
    <item android:state_pressed="false">
        <bitmap android:src="@drawable/settings_fpv_foreground" android:tint="@android:color/white" />
    </item>
    <item android:state_pressed="true">
        <bitmap android:src="@drawable/settings_fpv_foreground" android:tint="@android:color/white" />
    </item>
</selector>