<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/tranparent_product_main_color" />
            <stroke android:width="1.0dip" android:color="@color/product_main_color" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/tranparent_product_main_color" />
            <stroke android:width="1.0dip" android:color="@color/product_main_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="1.0dip" android:color="@color/transparent_white" />
        </shape>
    </item>
</selector>