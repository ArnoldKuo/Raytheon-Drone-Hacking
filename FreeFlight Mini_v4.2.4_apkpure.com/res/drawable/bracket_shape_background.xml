<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="0.0dip" android:top="@dimen/home_bracket_margin" android:right="0.0dip" android:bottom="@dimen/home_bracket_margin">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/home_bracket_radius" />
                    <solid android:color="@color/card_pressed" />
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/home_bracket_radius" />
                    <solid android:color="@color/card_focused" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/home_bracket_radius" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>